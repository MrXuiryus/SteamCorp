<?xml version="1.0" encoding="utf-8" ?>
<ThingDefs>

  <ThingDef Name="MrXuiryus_BuildingNaturalBase" Abstract="True">
    <category>Building</category>
    <selectable>true</selectable>
    <drawerType>MapMeshOnly</drawerType>
    <filthLeaving>RockRubble</filthLeaving>
		<scatterableOnMapGen>false</scatterableOnMapGen>
	</ThingDef>


  <ThingDef Name="MrXuiryus_RockBase" ParentName="MrXuiryus_BuildingNaturalBase" Abstract="True" >
    <thingClass>Mineable</thingClass>
    <graphicData>
      <texPath>Things/Building/Linked/Rock_Atlas</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <linkType>CornerFiller</linkType>
      <linkFlags>
        <li>Rock</li>
        <li>MapEdge</li>
      </linkFlags>
    </graphicData>
    <altitudeLayer>Building</altitudeLayer>
    <passability>Impassable</passability>
    <blockWind>true</blockWind>
    <castEdgeShadows>true</castEdgeShadows>
    <fillPercent>1</fillPercent>
    <coversFloor>true</coversFloor>
    <neverMultiSelect>true</neverMultiSelect>
    <rotatable>false</rotatable>
    <saveCompressible>true</saveCompressible>
    <holdsRoof>true</holdsRoof>
    <staticSunShadowHeight>1.0</staticSunShadowHeight>
    <blockLight>true</blockLight>
    <mineable>true</mineable>
    <statBases>
      <Flammability>0</Flammability>
    </statBases>
    <building>
      <isInert>true</isInert>
      <isNaturalRock>true</isNaturalRock>
      <canBuildNonEdificesUnder>false</canBuildNonEdificesUnder>
      <deconstructible>false</deconstructible>
    </building>
  </ThingDef>
  
   <ThingDef ParentName="MrXuiryus_RockBase">
    <defName>MrXuiryus_MineableCoal</defName>
    <label>Coal</label>
    <graphicData>
      <texPath>Things/Building/Linked/RockFlecked_Atlas</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <shaderType>CutoutComplex</shaderType>
      <color>(50,50,50)</color>
      <colorTwo>(0,0,0)</colorTwo>
    </graphicData>
    <statBases>
      <MaxHitPoints>700</MaxHitPoints>
    </statBases>
    <description>A fuel source created over thousands of years.</description>
    <building>
      <isResourceRock>true</isResourceRock>
      <mineableThing>MrXuiryus_Coal</mineableThing>
      <mineableYield>35</mineableYield>
      <mineableScatterCommonality>1</mineableScatterCommonality>
      <mineableScatterLumpSizeRange>
        <min>20</min>
        <max>40</max>
      </mineableScatterLumpSizeRange>
    </building>
  </ThingDef>
  
	<ThingDef ParentName="MrXuiryus_RockBase">
    <defName>MrXuiryus_MineableBrass</defName>
    <label>Brass</label>
    <graphicData>
      <texPath>Things/Building/Linked/RockFlecked_Atlas</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <shaderType>CutoutComplex</shaderType>
	  <color>(98,71,59)</color>
      <colorTwo>(93,102,85)</colorTwo>
    </graphicData>
    <statBases>
      <MaxHitPoints>1000</MaxHitPoints>
    </statBases>
    <description>A metal alloy created by the combination of copper and zinc.</description>
    <building>
      <isResourceRock>true</isResourceRock>
      <mineableThing>MrXuiryus_Brass</mineableThing>
      <mineableYield>35</mineableYield>
      <mineableScatterCommonality>1</mineableScatterCommonality>
      <mineableScatterLumpSizeRange>
        <min>20</min>
        <max>40</max>
      </mineableScatterLumpSizeRange>
    </building>
  </ThingDef>
  
</ThingDefs>