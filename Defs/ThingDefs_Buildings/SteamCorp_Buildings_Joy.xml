<?xml version="1.0" encoding="utf-8" ?>
<ThingDefs>

  <ThingDef ParentName="MrXuiryus_Building_Base">
    <defName>MrXuiryus_Piano</defName>
    <label>piano</label>
    <description>A cathode ray tube display for showing moving pictures with sound. Even on the rimworlds, there is often an old transmitter running something at least marginally interesting.</description>
    <graphicData>
      <texPath>Buildings/joy/piano</texPath>
      <graphicClass>Graphic_Multi</graphicClass>
      <shaderType>CutoutComplex</shaderType>
      <drawSize>(3,3)</drawSize>
      <damageData>
        <cornerTL>Damage/Corner</cornerTL>
        <cornerTR>Damage/Corner</cornerTR>
        <cornerBL>Damage/Corner</cornerBL>
        <cornerBR>Damage/Corner</cornerBR>
      </damageData>
    </graphicData>
    <staticSunShadowHeight>0.20</staticSunShadowHeight>
    <altitudeLayer>Building</altitudeLayer>
    <socialPropernessMatters>true</socialPropernessMatters>
    <fillPercent>0.40</fillPercent>
    <statBases>
      <MaxHitPoints>250</MaxHitPoints>
      <WorkToBuild>12000</WorkToBuild>
      <Mass>300</Mass>
      <Flammability>1.0</Flammability>
      <Beauty>0</Beauty>
      <EntertainmentStrengthFactor>1</EntertainmentStrengthFactor>
    </statBases>
    <size>(3,3)</size>
    <stuffCategories>
      <li>Metallic</li>
      <li>Woody</li>
      <li>Stony</li>
    </stuffCategories>
	<costStuffCount>15</costStuffCount>
    <pathCost>70</pathCost>
    <passability>PassThroughOnly</passability>
    <building>
      <isJoySource>true</isJoySource>
      <watchBuildingStandDistanceRange>
        <min>2</min>
        <max>4</max>
      </watchBuildingStandDistanceRange>
			<watchBuildingStandRectWidth>5</watchBuildingStandRectWidth>
    </building>
    <placeWorkers>
      <li>PlaceWorker_WatchArea</li>
    </placeWorkers>
    <designationCategory>Joy</designationCategory>
  </ThingDef>
 
</ThingDefs> 